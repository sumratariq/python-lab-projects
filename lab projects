#cgpa calculator
cgpa = 0
sum = 0
for i in range(2):
    subject = input("Write name of the subject.")
    gpa = float(input("Write the gpa gained in the subject."))
    credithours = float(input("Enter the credit hours of the subject."))
    cgpa += (gpa*credithours)
    sum += credithours
cgpa1 = cgpa/sum
print(f"Your total cgpa is {cgpa1}.")



#electricity bill calculator.
unit_consumed = float(input("Enter total number of unit consumed."))
if unit_consumed<=100:
    bill = 10*unit_consumed
elif unit_consumed<=200:
    bill = 20*unit_consumed
elif unit_consumed<300:
    bill = 30*unit_consumed
else:
    bill = 40*unit_consumed
print(f"Your total bill is Rs:{bill}")
